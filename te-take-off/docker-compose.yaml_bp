version: '3'
services:
  te_take_off:
    build: .
    command: ["./target/release/te_take_off"]
    ports:
      - "8080:8080"
    environment:
      DATABASE_URL: postgres://postgres:postgres@postgres/te_take_off
  postgres:
    image: postgres:12
    environment:
      POSTGRES_PASSWORD: postgres
      POSTGRES_USER: postgres
      POSTGRES_DB: te_take_off
    ports:
      - "5432:5432"
